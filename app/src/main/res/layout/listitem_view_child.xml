<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lv_agree_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="18.67dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_agree_checkbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_agree_checkbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="false"
                    android:background="@drawable/selector_checkbox_agree"
                    android:button="@null"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_agree_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="9.33dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="전체동의"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_agree_more_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_agree_more"
                android:clickable="false"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_agree_contents"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f7f7f7"
        android:orientation="vertical"
        android:visibility="visible">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_agree_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18.67dp"
                android:paddingRight="18.67dp"
                android:paddingTop="17dp"
                android:textColor="#666666"
                android:textSize="14dp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>